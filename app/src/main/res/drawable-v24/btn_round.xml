<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#55D6FF"
                android:endColor="#CE55FF"/>
            <corners android:radius="15dip" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/>
            <corners android:radius="15dip"/>
        </shape>
    </item>
</layer-list>